    package="cn.edu.gdmec.s07150808.colabox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".cola.ui.ColaBox">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".cola.ui.Frm_Addbills"/>

        <activity android:name=".cola.ui.Frm_Editacctitem"/>

        <activity android:name=".cola.ui.Grid_bills"/>

        <service android:name=".cola.ui.LocalService" android:enabled="true" android:exported="true"/>
    </application>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

</manifest>